<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AddVinoFragment">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/editText4Alcohol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="% Alcohol"
                android:inputType="numberDecimal"
                app:layout_constraintStart_toStartOf="@+id/editText2Uvas"
                app:layout_constraintTop_toBottomOf="@+id/editText2Uvas" />

            <EditText
                android:id="@+id/editText5Envejecimiento"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Envejecimiento"
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="@+id/editText4Alcohol"
                app:layout_constraintTop_toBottomOf="@+id/editText4Alcohol" />

            <EditText
                android:id="@+id/editText7Precio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Precio en €"
                android:inputType="numberDecimal"
                app:layout_constraintStart_toStartOf="@+id/editText6Pais"
                app:layout_constraintTop_toBottomOf="@+id/editText6Pais" />

            <EditText
                android:id="@+id/editText8Cata"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                app:layout_constraintStart_toStartOf="@+id/editText7Precio"
                app:layout_constraintTop_toBottomOf="@+id/editText7Precio" />

            <EditText
                android:id="@+id/editTextNombre"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:editable="true"
                android:ems="10"
                android:hint="Nombre Vino"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                app:layout_constraintStart_toEndOf="@+id/imageView3" />

            <EditText
                android:id="@+id/editTextCrianza"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:editable="true"
                android:ems="10"
                android:hint="Cosecha"
                android:inputType="number"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <EditText
                android:id="@+id/editText6Pais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="País"
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="@+id/editText5Envejecimiento"
                app:layout_constraintTop_toBottomOf="@+id/editText5Envejecimiento" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="140dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:entries="@array/tipo_vino"
                app:layout_constraintBottom_toBottomOf="@+id/textView4"
                app:layout_constraintStart_toEndOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:text="Tipo de Vino"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="@+id/editTextNombre"
                app:layout_constraintTop_toBottomOf="@+id/editTextNombre" />

            <EditText
                android:id="@+id/editTextBodega"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:editable="true"
                android:ems="10"
                android:hint="Bodega"
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="@+id/editTextCrianza"
                app:layout_constraintTop_toBottomOf="@+id/editTextCrianza" />

            <EditText
                android:id="@+id/editTextDenominacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:hint="Denominación Origen"
                android:inputType="textPersonName"
                app:layout_constraintStart_toStartOf="@+id/editTextBodega"
                app:layout_constraintTop_toBottomOf="@+id/editTextBodega" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_017_rotate"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/buttonSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="115dp"
                android:clickable="true"
                android:src="@drawable/ic_check"
                android:tint="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <EditText
                android:id="@+id/editText2Uvas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Uvas"
                android:inputType="textMultiLine"
                app:layout_constraintStart_toStartOf="@+id/editTextDenominacion"
                app:layout_constraintTop_toBottomOf="@+id/editTextDenominacion" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

